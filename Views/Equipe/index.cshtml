@model Equipe 
@{
    ViewData ["title"] = "Equipes";
}

<form method="POST" action = '@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label> ID </label>
    <input type= "text" name= "Idequipe" />

     <label>Nome</label>
     <input type= "text" name="Nome">

      <label>Imagem</label>
      <input  type= "file" name= "Imagem"/> 

      <button type= "submit">Cadatrar</button>
       
</form>

<table class=" table table-striped table-responsive">

   <thead>
      
                <th>ID</th>
                <th>Nome</th>
                <th>Foto</th>
                
   </thead>

   <tbody>
       @foreach (Equipe equipe  in ViewBag.Equipe)
       { 
           <tr>
                <td>@equipe. IdEquipe</td>
                <td>@equipe. Nome</td>
                <td><img src=" / img/Equipes/@equipe.Imagem"alt = "Imagem da equipe @equipe.Nome" width= "40"> </td>
             
                  <td><a asp-area="Link para excluir um equipe" asp-controller="Equipe" asp-action= "Excluir"asp-route-id="@equipe.IdEquipe">Excluir</a></td>
           </tr>
           
       }
   </tbody>

</table>